<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <header class="py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="">Admin panel</h1>
            <a href="/" class="btn btn-warning">Asosiy sahifa</a>
            <a href="/authors" class="btn btn-warning">Mualliflar</a>
            <a href="/categories" class="btn btn-warning">Turkumlar</a>
        </div>
    </header>

    <div class="container books-container">
        <!-- Button trigger modal -->
<button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
    Qo'shish
  </button>
  
  
        <div class="books">
            <h1>Kitoblar</h1>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">№</th>
                    <th scope="col">Nomi</th>
                    <th scope="col">Narxi</th>
                    <th scope="col">Soni</th>
                    <th scope="col">AuthorId</th>
                    <th scope="col">CategoryId</th>
                    <th scope="col">Tavsif</th>
                    <th scope="col">Rasm</th>
                  </tr>
                </thead>
                <tbody>
                  <% books.forEach(el => { %>
                    <tr>
                        <th scope="row"><%= el.id %></th>
                        <td><%= el.name %></td>
                        <td><%= el.price %></td>
                        <td><%= el.count%></td>
                        <td><%= el.authId %></td>
                        <td><%= el.categoryId %></td>
                        <td><%= el.desc %></td>
                        <td><img width="100" height="100" src=<%= el.img %> alt=<%= el.name %>></td>
                      </tr>
                  <% }) %>
                </tbody>
              </table>
        </div>

        <div class="books">
            <h1>Buyurtmalar</h1>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">№</th>
                    <th scope="col">Mijoz ismi</th>
                    <th scope="col">Kitob nomi</th>
                    <th scope="col">Soni</th>
                    <th scope="col">Umumiy Narxi</th>
                    <th scope="col">Telefon raqam</th>
                    <th scope="col">Manzil</th>w
                    <th scope="col">Rasm</th>w
                  </tr>
                </thead>
                <tbody>
                  <% orders.forEach(el => { %>
                    <tr>
                        <th scope="row"><%= el.id %></th>
                        <td><%= el.clientName %></td>
                        <td><%= el.book.name %></td>
                        <td><%= el.count%></td>
                        <td><%= el.totalPrice %></td>
                        <td><%= el.phone %></td>
                        <td><%= el.address %></td>
                        <td><img width="100" height="100" src=<%= el.book.img %> alt=<%= el.book.name %>></td>
                      </tr>
                  <% }) %>
                </tbody>
              </table>
        </div>

        <div class="container">


            <div class="authors">
                <h1>Mualliflar</h1>
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">№</th>
                        <th scope="col">FullName</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% authors.forEach(el => { %>
                        <tr>
                            <th scope="row"><%= el.id %></th>
                            <td><%= el.fullName %></td>
                          </tr>
                       
                      <% }) %>
                      
                    </tbody>
                  </table>

            </div>
        </div>

        <div class="container">
            <h1>Turkumlar</h1>
         
                <div class="category">
                    <table class="table">
                        <thead>
                          <tr>
                            <th scope="col">№</th>
                            <th scope="col">Turkum nomi</th>
                          </tr>
                        </thead>
                        <tbody>
                         <% categories.forEach(el => { %>
                            <tr>
                                <th scope="row"><%= el.id %></th>
                                <td><%= el.name %></td>
                              </tr>
                         <% }) %>
                        </tbody>
                      </table>
                </div>
        </div>


<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="staticBackdropLabel">Kitoblar qo'shish</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/books/create" method="post">
          <input required class="form-control mb-3" name="name" type="text" placeholder="Nomini kiriting">
          <input required class="form-control mb-3" name="price" type="number" min="0" placeholder="Narxini kiriting">
          <input required class="form-control mb-3" name="count" type="number" min="0" placeholder="Sonini kiriting">
          <input required class="form-control mb-3" name="authorId" min="0" type="number" placeholder="AuthorIdisini kiriting">
          <input required class="form-control mb-3" name="categoryId" min="0" type="number" placeholder="CategoryIdisini kiriting">
          <input required class="form-control mb-3" name="img" type="text" placeholder="Rasm linkini kiriting">
          <textarea name="desc" class="form-control mb-3" placeholder="Tavfsif yozing"></textarea>
          <button class="btn btn-warning">Qo'shish</button>

          </form>
        </div>
        </div>
      </div>
    </div>
  </div>

    </div>
</body>
</html>