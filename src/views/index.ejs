<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


</head>
<body>
    <link rel="stylesheet" href="/style/home.css">
    <section>
        <h1 class="heading-top">Welcome TO</h1>
        <div class="book-wrap">
          <div class="book">
            <div class="cover">
              <div class="left-page">
                <div class="seal">
                  <div class="inner-circle">
                    <div class="emblem"></div>
                  </div>
                </div>
                <div class="lines">
                  <div class="line line-1 bold"></div>
                  <div class="line line-2 short green"></div>
                  <div class="line line-3"></div>
                  <div class="line line-4"></div>
                  <div class="line line-5"></div>
                  <div class="line line-6 green"></div>
                </div>
                <div class="page-bottom">
                  <div class="page-1 page"></div>
                  <div class="page-2 page"></div>
                  <div class="page-3 page"></div>
                  <div class="page-4 page"></div>
                </div>
              </div>
              <div class="right-page">
                <div class="lines">
                  <div class="line line-1 bold"></div>
                  <div class="line line-2 short green"></div>
                  <div class="line line-3"></div>
                  <div class="line line-4"></div>
                  <div class="line line-5"></div>
                </div>
                <div class="list">
                  <div class="list-item list-item-1">
                    <div class="dot"></div>
                    <div class="item"></div>
                  </div>
                  <div class="list-item list-item-2">
                    <div class="dot"></div>
                    <div class="item"></div>
                  </div>
                  <div class="list-item list-item-3">
                    <div class="dot"></div>
                    <div class="item"></div>
                  </div>
                  <div class="list-item list-item-4">
                    <div class="dot"></div>
                    <div class="item"></div>
                  </div>
                </div>
                <div class="page-bottom">
                  <div class="page-1 page"></div>
                  <div class="page-2 page"></div>
                  <div class="page-3 page"></div>
                  <div class="page-4 page"></div>
                </div>
              </div>
            </div>
          </div>
        </div><!-- end .book-wrap -->
        <h1 class="heading-bottom">BOOK STORE</h1>
    </section>
       

       <section>
       <div class="container">
       <div class="books d-flex justify-content-between flex-wrap gap-3">
        <% books.forEach(el => { %>
            <div class="card" style="width: 18rem;">
                <img  width="350" height="300" src=<%= el.img %> class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title">Nomi: <%= el.name %></h5>
                  <p class="card-text">Soni: <%= el.count %> ta</p>
                  <p class="card-text">Narxi: <%= el.price %> so'm</p>
                  <p class="card-text"><%= el.desc %></p>
                  
                  <a href="/orders/<%= el.id %>" class="btn btn-warning">Buyurtma berish</a>
                </div>
              </div>
        <% }) %>

         

















       </div>
       </div>
        
       </section>   
        
            
            

</body>
</html>



